<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.finnik.music">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Music">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver
            android:name="com.arges.sepan.argmusicplayer.ArgNotificationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="com.arges.intent.PLAYPAUSE" />
                <action android:name="com.arges.intent.NEXT" />
                <action android:name="com.arges.intent.PREV" />
                <action android:name="com.arges.intent.HOME" />
                <action android:name="com.arges.intent.CLOSE" />
            </intent-filter>
        </receiver>
        <service android:name="com.arges.sepan.argmusicplayer.ArgMusicService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.INTERNET">
            <intent-filter>
                <action android:name="com.arges.intent.service.PLAYPAUSE"/>
                <action android:name="com.arges.intent.service.NEXT"/>
                <action android:name="com.arges.intent.service.PREV"/>
                <action android:name="com.arges.intent.service.STOP"/>
            </intent-filter>
        </service>
        <service android:name="de.finnik.music.MediaPlayerService" />
        <service android:name=".player.MusicPlayerService">
            <intent-filter>
                <action android:name="de.finnik.music.ACTION_PLAY" />
                <action android:name="de.finnik.music.ACTION_PAUSE" />
            </intent-filter>
        </service>
    </application>

</manifest>